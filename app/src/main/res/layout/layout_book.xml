<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingHorizontal="16dp"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="90dp"
            android:layout_height="120dp"/>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/colorTitle"
                android:text="Eleven Minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/author"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/colorTitle"
                android:text="Written By- Paulo Coelho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/des"
                android:textSize="14dp"
                android:text="Love is a terrible thing that will make you suffer. This daring new novel sees the author of The Alchemist at his best - challenging our prejudices."
                android:maxLines="6"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>




        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <Button
            android:id="@+id/preview"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:text="DOWNLOAD"
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/buy"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:text="BUY"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout >